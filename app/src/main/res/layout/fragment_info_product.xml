<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    tools:context=".presentation.scanner.InfoProductFragment">



    <ImageView
        android:id="@+id/main_image"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:src="@drawable/product_info_image"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent"/>

    <ImageView
        android:id="@+id/image_arrow_back"
        android:layout_width="40dp"
        android:layout_height="40dp"
        android:src="@drawable/ic_arrow_left"
        android:padding="8dp"
        android:layout_marginStart="20dp"
        android:layout_marginTop="20dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        android:background="@drawable/search_background"/>


    <ImageView
        android:id="@+id/image_share"
        android:layout_width="40dp"
        android:layout_height="40dp"
        android:src="@drawable/ic_share"
        android:padding="8dp"
        android:layout_marginEnd="80dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="@id/image_arrow_back"
        android:background="@drawable/search_background"/>

    <ImageView
        android:id="@+id/imahe_favourite"
        android:layout_width="40dp"
        android:layout_height="40dp"
        android:src="@drawable/ic_love"
        android:padding="8dp"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_marginEnd="20dp"
        app:layout_constraintTop_toTopOf="@id/image_arrow_back"
        android:background="@drawable/search_background"/>

    <androidx.cardview.widget.CardView
        android:id="@+id/cardView"
        android:layout_width="360dp"
        android:layout_height="110dp"
        app:cardCornerRadius="15dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        android:layout_marginBottom="120dp">

        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">
        
        <TextView
            android:id="@+id/cardView_main_text"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="#163300"
            android:textSize="24sp"
            android:layout_marginTop="15dp"
            android:layout_marginStart="10dp"
            android:text="Coca-Cola"
            android:fontFamily="@font/inter_600"/>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="#6A6C6A"
                app:layout_constraintStart_toStartOf="@id/cardView_main_text"
                app:layout_constraintTop_toBottomOf="@id/cardView_main_text"
                android:textSize="16sp"
                android:layout_marginTop="8dp"
                android:text="Coca-Cola Original Taste 1.5L"
                android:fontFamily="@font/inter_600"/>
           <TextView
               android:id="@+id/text_halal"
               android:layout_width="180dp"
               android:layout_height="wrap_content"
               android:text="Halal"
               android:gravity="center"
               app:layout_constraintEnd_toEndOf="parent"
               app:layout_constraintTop_toTopOf="parent"
               android:layout_marginTop="40dp"
               android:layout_marginStart="10dp"
               android:background="#9FE870"
               android:rotation="45"
               android:fontFamily="@font/inter_700"
               android:textSize="20sp"/>
        </androidx.constraintlayout.widget.ConstraintLayout>

    </androidx.cardview.widget.CardView>


    <TextView
        android:id="@+id/text_source"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toBottomOf="@id/cardView"
        android:text="Источник"
        android:layout_marginTop="8dp"
        android:layout_marginStart="20dp"
        android:textSize="22sp"
        android:textColor="@color/black"
        android:fontFamily="@font/inter_600"/>
    <ImageView
        android:id="@+id/image_qmdb"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="5dp"
        android:src="@drawable/image_qmdb"
        app:layout_constraintTop_toBottomOf="@id/text_source"
        app:layout_constraintStart_toStartOf="@id/text_source"/>
    <TextView
        android:id="@+id/text_qmdb"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toBottomOf="@id/text_source"
        app:layout_constraintTop_toTopOf="@id/image_qmdb"
        app:layout_constraintStart_toEndOf="@id/image_qmdb"
        android:text="QMDB Halal"
        android:layout_marginTop="10dp"
        android:layout_marginStart="10dp"
        android:textSize="16sp"
        android:textColor="#6A6C6A"
        android:fontFamily="@font/inter_400"/>


    <TextView
        android:id="@+id/text_health"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toBottomOf="@id/image_qmdb"
        android:text="Health authorities"
        android:layout_marginTop="5dp"
        android:layout_marginStart="20dp"
        android:textSize="22sp"
        android:textColor="@color/black"
        android:fontFamily="@font/inter_600"/>
    <ImageView
        android:id="@+id/image_health"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="5dp"
        android:src="@drawable/image_health"
        app:layout_constraintTop_toBottomOf="@id/text_health"
        app:layout_constraintStart_toStartOf="@id/text_health"/>
    <TextView
        android:id="@+id/text_health2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toBottomOf="@id/text_health"
        app:layout_constraintTop_toTopOf="@id/image_health"
        app:layout_constraintStart_toEndOf="@id/image_health"
        android:text="Bad nutritional quality"
        android:layout_marginTop="10dp"
        android:layout_marginStart="10dp"
        android:textSize="16sp"
        android:textColor="#6A6C6A"
        android:fontFamily="@font/inter_400"/>
    <TextView
        android:id="@+id/text_ingredients"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toBottomOf="@id/image_health"
        android:text="Ingredients"
        android:layout_marginTop="5dp"
        android:layout_marginStart="20dp"
        android:textSize="22sp"
        android:textColor="@color/black"
        android:fontFamily="@font/inter_600"/>

    <TextView
        android:id="@+id/sub_text_ingredients"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintStart_toStartOf="@id/text_source"
        app:layout_constraintTop_toBottomOf="@id/text_ingredients"
        android:text="purified water, sugar, sugar coloring color IV, acidity regulator orthophosphoric acid, natural flavors, caffeine (less than 150 mg/l)purified water, sugar, sugar coloring color IV, acidity regulator orthophosphoric acid, natural flavors, caffeine (less than 150 mg/l)"
        android:layout_marginTop="5dp"
        android:textSize="14sp"
        android:textColor="#6A6C6A"
        android:fontFamily="@font/inter_400"/>

    <TextView
        android:id="@+id/text_additive"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toBottomOf="@id/sub_text_ingredients"
        android:text="Additives detected"
        android:layout_marginTop="5dp"
        android:layout_marginStart="20dp"
        android:textSize="22sp"
        android:textColor="@color/black"
        android:fontFamily="@font/inter_600"/>

    <TextView
        android:id="@+id/sub_text_additive"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintStart_toStartOf="@id/text_source"
        app:layout_constraintTop_toBottomOf="@id/text_additive"
        android:text="E290, E150, E338"
        android:layout_marginTop="5dp"
        android:textSize="14sp"
        android:textColor="#6A6C6A"
        android:fontFamily="@font/inter_400"/>





</androidx.constraintlayout.widget.ConstraintLayout>